<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deepanshu.quiz.QBDetails">

    <TextView
        android:id="@+id/head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Enter the details of your Question Bank :"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_QBname"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Question Bank Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/head1"
        android:layout_alignStart="@+id/et_posMarks"
        android:layout_marginTop="40dp" />


    <EditText
        android:id="@+id/et_posMarks"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Positive Marks for correct answer"
        android:inputType="number"
        android:layout_below="@+id/et_QBname"
        android:layout_alignStart="@+id/et_negMarks" />

    <EditText
        android:id="@+id/et_negMarks"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/et_posMarks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Negative Marks for wrong answer"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:text="Finish"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/et_negMarks" />

    <Button
        android:id="@+id/btn_addQuestions"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Add Questions"
        android:layout_alignBaseline="@+id/btn_finish"
        android:layout_alignBottom="@+id/btn_finish"
        android:layout_alignStart="@+id/et_negMarks" />
</RelativeLayout>
