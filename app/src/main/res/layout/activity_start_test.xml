<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deepanshu.quiz.StartTest">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Test Details"
        android:textSize="25sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/tv_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text=" Name : " />

        <TextView
            android:id="@+id/tv_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Test Name Comes here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Topic : " />

        <TextView
            android:id="@+id/tv_test_topic"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Test Topic Comes here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/linearLayout_3"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout_2"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Duration :" />

        <TextView
            android:id="@+id/tv_test_duration"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Duration Comes here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_3"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Author :" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Test author Comes here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_4"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Marking Scheme : " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_5"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Positive : " />

        <TextView
            android:id="@+id/tv_posMarks"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Positive marks " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_6"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_8"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Negative : " />

        <TextView
            android:id="@+id/tv_negMarks"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Negative Marks" />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:id="@+id/btn_start_test"
        android:layout_height="40dp"
        android:background="#ff0000"
        android:text="Start"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />


</RelativeLayout>
